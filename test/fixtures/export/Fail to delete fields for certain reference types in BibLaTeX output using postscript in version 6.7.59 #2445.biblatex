@article{shibaoheng2006,
  title = {延长油矿的早期勘探与开采简述},
  author = {{石宝珩}},
  date = {2006},
  journaltitle = {中国科技史杂志},
  number = {1},
  pages = {75--80},
  urldate = {2023-01-05},
  abstract = {始建于 1905 年的延长油矿是中国大陆上发现和开发最早的油田。在延长油矿早期 (1905—1949 年) 勘探与开采中，有 5 件重大事件，即：从延长石油官厂的成立与中国近代陆上第一口油井、民办油矿的呼声、美孚对陕北的钻探与石油地质调查、中国人进行的早期陕北石油地质调查和有力地支援抗日战争的功臣油矿。}
}
